<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DiachiThanhtoanActivity"
    android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbardiachinhanhang"
            app:title="Địa chỉ nhận hàng"
            android:layout_width="match_parent"
            android:background="#E04B41"
            android:layout_height="?actionBarSize">
        </android.support.v7.widget.Toolbar>



    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:text="Địa chỉ nhận hàng"
            android:textColor="#f000"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTengh"
            android:layout_width="192dp"
            android:layout_height="31dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="16dp"
            android:text="Tên"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewtitle" />


        <TextView
            android:id="@+id/txtsdtgh"
            android:layout_width="184dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="12dp"
            android:text="sdt"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTengh" />

        <TextView
            android:id="@+id/txtdiachi"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="20dp"
            android:text="dia chi"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtsdtgh" />

        <EditText
            android:id="@+id/edtdiachi"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="20dp"
            android:text="edit text"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtsdtgh" />

        <ImageButton
            android:id="@+id/imageedit"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="168dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toEndOf="@+id/edtdiachi"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/edit2" />

        <ImageButton
            android:id="@+id/imagesave"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="168dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toEndOf="@+id/edtdiachi"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/save" />


        <Button
            android:id="@+id/buttondiachi"
            android:layout_width="281dp"
            android:layout_height="45dp"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="240dp"
            android:background="#EC4A4A"
            android:text="Giao đến địa chỉ này"
            android:textColor="#FCFAFA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtdiachi" />


    </android.support.constraint.ConstraintLayout>



</LinearLayout>