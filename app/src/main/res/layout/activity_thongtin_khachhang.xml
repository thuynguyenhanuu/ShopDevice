<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ThongtinKhachhangActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbartaikhoan"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#E04B41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Tài khoản">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa hồ sơ"
        android:textColor="#f000"
        android:textSize="20sp" />

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txttennd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="28dp"
            android:text="Tên"
            android:textSize="18sp"
            android:textColor="#f000" />

        <TextView
            android:id="@+id/txtvalueten"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginStart="88dp"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="28dp"
            android:text="tên tôi"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/imagetenedit"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            app:srcCompat="@drawable/editedit" />

    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="#A09C9C"
        android:layout_height="1dp"/>

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtsdtnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginTop="24dp"
            android:text="Số điện thoại"
            android:textColor="#f000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txttennd" />
        <TextView
            android:id="@+id/txtvaluesdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="Số điện thoại"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/txtsdtnd"
            app:layout_constraintTop_toBottomOf="@+id/txtvalueten" />

    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="#A09C9C"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/txtdiachind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="28dp"
            android:text="Đc"
            android:textSize="18sp"
            android:textColor="#f000" />

        <TextView
            android:id="@+id/txtvaluediachi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:text="địa chỉ"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imagediachiedit"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            app:srcCompat="@drawable/editedit" />

    </LinearLayout>


    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="#A09C9C"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtmatkhaund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Thay đổi mật khẩu"
            android:textColor="#f000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtdiachind" />

        <ImageView
            android:id="@+id/imagematkhauedit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="160dp"
            android:src="@drawable/editedit"
            android:layout_marginTop="16dp" />
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="#A09C9C"
        android:layout_height="1dp"/>


</LinearLayout>